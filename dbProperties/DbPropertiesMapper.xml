<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.starso.job.modules.dbProperties.mapper.DbPropertiesMapper">

    <sql id="Base_Column_List">
        id,flag,url,username,`password`,`status`,create_by,create_time,update_by,update_time,remark
    </sql>

    <select id="queryDbPropertiesByFlag" resultType="com.starso.job.modules.dbProperties.domain.DbProperties">
        select
        <include refid="Base_Column_List"/>
        from deploy_db_properties
        where status = '1' and flag = #{flag}
    </select>

</mapper>
