<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.starso.job.modules.dataTimer.mapper.SspSendDataMapper" >
  <resultMap id="BaseResultMap" type="com.starso.job.modules.dataTimer.domain.SspSendData" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="send_time" property="sendTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id,send_time
  </sql>
  <select id="selectSendTimeById" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select
    <include refid="Base_Column_List" />
    from ssp_send_data
    where id = #{id,jdbcType=VARCHAR}
  </select>

  <insert id="insertDataTime" parameterType="java.lang.String">
  	insert into ssp_send_data(id,send_time)
  	values (#{id,jdbcType=VARCHAR},now())
  </insert>

  <update id="updateDataTime" parameterType="java.lang.String">
  	update ssp_send_data
  	set
  		send_time = now()
  	where id = #{id,jdbcType=VARCHAR}
  </update>

    <insert id="insertReplace" parameterType="list" >
        replace into ssp_send_data (id,send_time)
        values
        (#{id,jdbcType=VARCHAR},#{nowTime,jdbcType=TIMESTAMP})
    </insert>
</mapper>
